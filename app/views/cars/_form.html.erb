<%= form_for :car do |f| %>

  <% if @car.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@car.errors.count, "error") %> prohibited
        this car from being saved:
      </h2>
      <ul>
        <% @car.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= f.label :year %><br>
    <%= f.number_field :year %>
  </p>

  <p>
    <%= f.label :make %><br>
    <%= f.text_field :make %>
  </p>

  <p>
    <%= f.label :model %><br>
    <%= f.text_field :model %>
  </p>

  <p>
    <%= f.label :date_sold %><br>
    <%= f.date_field :date_sold %>
  </p>

  <p>
    <%= f.label :price %><br>
    <%= f.number_field :price, :step => 0.01 %>
  </p>

  <p>
    <%= f.submit %>
  </p>

<% end %>
